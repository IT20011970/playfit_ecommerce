{
  "name": "login-sdk",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "encrypt:db": "npm run generate-secrets-key:save && dotenv -e .env -- npm run encrypt:secrets",
   "decrypt:check": "dotenv -e .env -- npx ts-node -e \"console.log(require('./src/Db_Encript/decrypt-secrets').decryptedSecrets)\"",
    "start:dev": "dotenv -e .env -- nest start --watch",
  "encrypt": "npx tsc src/Db_Encript/encrypt-secrets.ts && node src/Db_Encript/encrypt-secrets.js",
  "encrypt:secrets": "ts-node src/Db_Encript/encrypt-secrets.ts",
     "generate-secrets-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "generate-secrets-key:save": "node -e \"const fs=require('fs');const k=require('crypto').randomBytes(32).toString('hex');const p='.env';const c=fs.existsSync(p)?fs.readFileSync(p,'utf8')+'\\n':'';fs.writeFileSync(p,c+'SECRETS_KEY='+k);console.log('Wrote SECRETS_KEY to .env');console.log(k);\"",
    "encrypt:with-key": "npm run generate-secrets-key:save && npm run encrypt:secrets",
    "start:dev:one": "node src/Db_Encript/dev-start-with-key.js",
  "start:dev:secrets": "npm run decrypt:check && npm run start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.11.2",
    "@as-integrations/express5": "^1.1.2",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/typeorm": "^11.0.0",
    "bull": "^4.16.5",
    "class-validator": "^0.14.2",
    "graphql": "^16.11.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/xlsx": "^0.0.35",
    "dotenv-cli": "^5.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
