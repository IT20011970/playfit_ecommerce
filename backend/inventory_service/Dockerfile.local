# Local Dockerfile for inventory_service
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY inventory_service/package*.json ./
COPY inventory_service/tsconfig*.json ./
COPY inventory_service/nest-cli.json ./

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY inventory_service/src ./src

# Build the application
RUN npm run build

EXPOSE 3004
CMD ["node", "dist/main"]
