# Local Dockerfile for login-sdk (user-service)
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY login-sdk/package*.json ./
COPY login-sdk/tsconfig*.json ./
COPY login-sdk/nest-cli.json ./

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY login-sdk/src ./src

# Build the application
RUN npm run build

EXPOSE 3000
CMD ["node", "dist/main"]
