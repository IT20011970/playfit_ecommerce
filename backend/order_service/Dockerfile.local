# Local Dockerfile for order_service
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY order_service/package*.json ./
COPY order_service/tsconfig*.json ./
COPY order_service/nest-cli.json ./

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY order_service/src ./src

# Build the application
RUN npm run build

EXPOSE 3003
CMD ["node", "dist/main"]
